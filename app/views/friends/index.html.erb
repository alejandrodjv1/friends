<p id="notice"><%= notice %></p>



<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Email</th>
      <th>Celular</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.Nombre %></td>
        <td><%= friend.Apellidos %></td>
        <td><%= friend.email %></td>
        <td><%= friend.Celular %></td>
        <td><%= friend.Twitter %></td>
        <td><%= link_to 'Consultar', friend %></td>
        <td><%= link_to 'Editar', edit_friend_path(friend) %></td>
        <td><%= link_to 'Eliminar', friend, method: :delete, data: { confirm: 'Estas Seguro de Eliminar..?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
